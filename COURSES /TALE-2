CREATE TABLE Courses (
    course_id INTEGER,
    course_name VARCHAR2(100),
    course_description VARCHAR2(500),
    course_credits NUMBER CHECK (course_credits > 0)
);
INSERT INTO courses( course_id, course_name, course_description, course_credits)
